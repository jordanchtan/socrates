<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socce.actonacton">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WaitingActivity"
            android:label="@string/title_activity_waiting"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.socce.actonacton.MainActivity" />
        </activity>
        <activity
            android:name=".StoreResultsActivity"
            android:label="@string/title_activity_store_results"
            android:parentActivityName=".WaitingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.socce.actonacton.WaitingActivity" />
        </activity>
        <activity
            android:name=".DealsActivity"
            android:label="@string/title_activity_deals"
            android:parentActivityName=".WaitingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.socce.actonacton.WaitingActivity" />
        </activity>
        <activity
            android:name=".InStoreActivity"
            android:label="@string/title_activity_in_store"
            android:parentActivityName=".WaitingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.socce.actonacton.WaitingActivity" />
        </activity>
    </application>

</manifest>